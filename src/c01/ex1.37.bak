;; a. 无穷连分式: f= N1/(D1 + N2)
;;    写出过程(cont-frac n d k)计算出k项有限连分式
(define (cont-frac n d k)
  (define (iter i result)
    (if (= i 0)
        result
        (if (= i n)
            (iter (- i 1) result)
            (iter (- i 1) ((/ (n i)
                              (+ (d i) result)))))))
  (iter k (/ (n k) (d k))))
;;    使用该过程检验顺序k值是否逼近1/黄金分割率
(cont-frac (lambda(i) 1.0)
           (lambda(i) 1.0)
           1000)
